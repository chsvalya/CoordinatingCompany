@page "/requests/create"
@model CoordinatingCompany.Pages.Requests.CreateModel

@{
    ViewData["Title"] = "Подать заявку";
}

<h3>Пожалуйста, заполните форму подачи заявки с желаемыми условиями занятий</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Request.DayOfWeek" class="control-label">День недели занятий</label>
                <select asp-for="Request.DayOfWeek" class="form-control">
                    <option>Понедельник</option>
                    <option>Вторник</option>
                    <option>Среда</option>
                    <option>Четверг</option>
                    <option>Пятница</option>
                    <option>Суббота</option>
                    <option>Воскресенье</option>
                </select>
                <span asp-validation-for="Request.DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.Time" class="control-label">Время начала занятий</label>
                <input asp-for="Request.Time" class="form-control" />
                <span asp-validation-for="Request.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.StartDate" class="control-label">Дата начала занятий</label>
                <input asp-for="Request.StartDate" class="form-control" />
                <span asp-validation-for="Request.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.EndDate" class="control-label">Дата окончания занятий</label>
                <input asp-for="Request.EndDate" class="form-control" />
                <span asp-validation-for="Request.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.Form" class="control-label">Возраст детей (класс)</label>
                <select asp-for="Request.Form" class="form-control">
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                    <option>11</option>
                </select>
                <span asp-validation-for="Request.Form" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.School" class="control-label">Название школы</label>
                <select asp-for="SelectedSchoolId" asp-items="Model.Schools" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Request.Course.Department" class="control-label">Предмет</label>
                <select asp-for="SelectedDepartmentId" asp-items="Model.Departments" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Request.Course" class="control-label">Цель занятий</label>
                <select asp-for="SelectedCourseType" asp-items="Model.Courses" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить заявку" onclick="toggleConfirm()" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}