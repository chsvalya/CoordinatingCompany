@page
@model CoordinatingCompany.Pages.Requests.DetailsModel

@{
    ViewData["Title"] = "Подтвердить";
}

<h1>Принять заявку</h1>

<hr />
<h3>Вы уверены, что хотите принять данный запрос?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            День недели
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Request.DayOfWeek)
        </dd>
        <dt class="col-sm-2">
            Время занятий
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Request.Time)
        </dd>
        <dt class="col-sm-2">
            Дата начала
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Request.StartDate)
        </dd>
        <dt class="col-sm-2">
            Дата окончания
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Request.EndDate)
        </dd>
        <dt class="col-sm-2">
            Класс
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Request.Form)
        </dd>
        <dt class="col-sm-2">
            Школа
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Request.School.Name)
        </dd>
        <dt class="col-sm-2">
            Предмет
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Request.Course.Department.Subject)
        </dd>
        <dt class="col-sm-2">
            Цель занятий
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Request.Course.Type)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Assignment.Id" />
        <input type="submit" value="Принять заявку" class="btn btn-primary" /> |
        <a asp-page="./Index">Назад к списку</a>
    </form>
</div>
